<div class="container">

  <h1>New game</h1>
  <div>
    <ul>
      <% @letters.each do |letter| %>
        <li class="p-3 mb-2 bg-primary text-white"><%= letter.capitalize %></li>
      <% end %>
    </ul>
  </div>
  <p>What is the longest word you can find?</p>
  <form class="input-group mb-3" action="/score" data-turbo="false">
    <input class="form-control" type="text" name="word">
    <input class="input-group-text" type="submit" value="play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
